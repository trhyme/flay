<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 用户会员充值记录信息表 -->
    <class name="com.java.letch.model.RechargeInfo" table="rechargeinfo">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="uid" column="uid"/>
        <property name="uuid" column="uuid"/>
        <property name="addtime" column="addtime"/>
        <property name="addprice" column="addprice"/>
        <property name="addmode" column="addmode"/>
        <property name="megid" column="megid"/>
        <property name="megname" column="megname"/>
        <property name="stratus" column="stratus"/>
        <property name="delstra" column="delstra"/>
        <property name="remark" column="remark"/>
		
		<property name="orderid" column="orderid"/>
		<property name="uphone" column="uphone"/>
		<property name="unames" column="unames"/>
		        
    </class>
</hibernate-mapping>