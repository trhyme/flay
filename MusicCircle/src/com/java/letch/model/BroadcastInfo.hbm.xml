<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 广播墙信息表 -->
    <class name="com.java.letch.model.BroadcastInfo" table="broadcastinfo">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="userid" column="userid"/>
        <property name="datetime" column="datetime"/>
        <property name="contents" column="contents"/>
        <property name="stratus" column="stratus"/>
        <property name="delstratu" column="delstratu"/>
        <property name="browsenum" column="browsenum"/>
        <property name="remarks" column="remarks"/>
        
    </class>
</hibernate-mapping>