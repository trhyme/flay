<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 广告弹窗信息表 -->
    <class name="com.java.letch.model.AdversInfo" table="advers">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <property name="pic" column="pic"/>
        <property name="url" column="url"/>
        <property name="work" column="work"/>
        <property name="sort" column="sort"/>
        
        <!-- 新版信息 -->
        <property name="begintime" column="begintime"/>
        <property name="endsstime" column="endsstime"/>
        <property name="straus" column="straus"/>
        
    </class>
</hibernate-mapping>