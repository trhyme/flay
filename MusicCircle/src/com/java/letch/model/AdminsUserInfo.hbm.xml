<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 后台管理员信息类配置 -->
    <class name="com.java.letch.model.AdminsUserInfo" table="adminsuserinfo">
        <id name="admid" column="admid">
            <generator class="identity"/>
        </id>
        <property name="admstr" column="admstr"/>
        <property name="admname" column="admname"/>
        <property name="admadress" column="admadress"/>
        <property name="admemail" column="admemail"/>
        <property name="admphone" column="admphone"/>
        <property name="admphoto" column="admphoto"/>
        <property name="admstate" column="admstate"/>
        <property name="admtimes" column="admtimes"/>
        <property name="admlasts" column="admlasts"/>
        <property name="admlogip" column="admlogip"/>
        <property name="admtocken" column="admtocken"/>
        <property name="admremark" column="admremark"/>
        
        <!-- 菜单配置 -->
      	<set name="usersMenu" order-by="id" inverse="true">
        	<key column="admid"></key>
        	<one-to-many class="com.java.letch.model.MenuUserInfo"/>
        </set>
        
    </class>
</hibernate-mapping>