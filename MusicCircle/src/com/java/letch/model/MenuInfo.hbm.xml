<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 后台菜单信息配置 -->
    <class name="com.java.letch.model.MenuInfo" table="menuinfo">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="ids" column="ids"/>
        <property name="title" column="title"/>
        <property name="url" column="url"/>
        <property name="pid" column="pid"/>
        <property name="stats" column="stats"/>
        <property name="icon" column="icon"/>
        <property name="remark" column="remark"/>
		
		<!-- 配置信息 -->
		<set name="usersMenu" order-by="id" inverse="true" >
        	<key column="menid"></key>
        	<one-to-many class="com.java.letch.model.AdminsUserInfo" />
        </set>
		
    </class>
</hibernate-mapping>