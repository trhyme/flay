<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 关注信息表 -->
    <class name="com.java.letch.model.view.CommitsUserViceosView" table="commitsuserviceosview">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="date" column="date"/>
        <property name="info" column="info"/>
        <property name="users_id" column="users_id"/>
        <property name="voices_id" column="voices_id"/>
        <property name="type" column="type"/>
        <property name="voiceurl" column="voiceurl"/>
        <property name="length" column="length"/>
        <property name="tapcount" column="tapcount"/>
        <property name="replyuser" column="replyuser"/>
        
        <property name="username" column="username"/>
        <property name="headpic" column="headpic"/>
        <property name="sex" column="sex"/>
        <property name="replyname" column="replyname"/>
        
        <!-- 动态的信息 -->
        <property name="theinfo" column="theinfo"/>
        <property name="thevoiceurl" column="thevoiceurl"/>
        <property name="thephoto" column="thephoto"/>
        <property name="theusername" column="theusername"/>
        <property name="theheadpic" column="theheadpic"/>
        <property name="theuserid" column="theuserid"/>
        <property name="lengthvoices" column="lengthvoices"/>
        
    </class>
</hibernate-mapping>