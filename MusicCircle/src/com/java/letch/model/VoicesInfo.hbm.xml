<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 音频视频信息表 -->
    <class name="com.java.letch.model.VoicesInfo" table="voices">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="voiceurl" column="voiceurl"/>
        <property name="pic" column="pic"/>
        <property name="info" column="info"/>
        <property name="playcount" column="playcount"/>
        <property name="sort" column="sort"/>
        <property name="work" column="work"/>
        <property name="categorys_id" column="categorys_id"/>
        <property name="types_id" column="types_id"/>
        <property name="users_id" column="users_id"/>
        <property name="date" column="date"/>
        <property name="length" column="length"/>
        <property name="title" column="title"/>
        
        <!-- 新版信息 -->
        <property name="photo" column="photo"/>
        <property name="address" column="address"/>
        
        <property name="fabulous" column="fabulous"/>
        <property name="collection" column="collection"/>
        <property name="commentnum" column="commentnum"/>
        
    </class>
</hibernate-mapping>