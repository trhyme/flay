<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- APP的Banner图信息类配置 -->
    <class name="com.java.letch.model.BannerInfo" table="bannerinfo">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="title" column="title"/>
        <property name="picurl" column="picurl"/>
        <property name="ordernum" column="ordernum"/>
        <property name="addtimes" column="addtimes"/>
        <property name="stratus" column="stratus"/>
        <property name="onlines" column="onlines"/>
        <property name="admids" column="admids"/>
        <property name="remark" column="remark"/>
        
        <!-- NEW -->
		<property name="htmlurl" column="htmlurl"/>
		 
    </class>
</hibernate-mapping>