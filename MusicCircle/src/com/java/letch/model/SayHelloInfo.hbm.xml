<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 打招呼信息表 -->
    <class name="com.java.letch.model.SayHelloInfo" table="sayhelloinfo">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="userid" column="userid"/>
        <property name="sayuserid" column="sayuserid"/>
        <property name="addtime" column="addtime"/>
        <property name="addyear" column="addyear"/>
        <property name="addmont" column="addmont"/>
        <property name="adddays" column="adddays"/>
        <property name="signnum" column="signnum"/>
        <property name="remarks" column="remarks"/>
        
    </class>
</hibernate-mapping>