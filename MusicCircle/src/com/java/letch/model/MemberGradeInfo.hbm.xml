<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- 会员等级信息表 -->
    <class name="com.java.letch.model.MemberGradeInfo" table="membergradeinfo">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="mname" column="mname"/>
        <property name="prices" column="prices"/>
        <property name="picurl" column="picurl"/>
        <property name="stratu" column="stratu"/>
        <property name="remark" column="remark"/>
        
        <!-- 新增会员天数字段 -->
        <property name="daynum" column="daynum"/>
        
    </class>
</hibernate-mapping>