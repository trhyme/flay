	        <!-- 获取评论信息的接口 -->
	        <mvc:mapping path="/appgetcommitpage"/> 	<!-- 获取评论信息接口 -->
	        
	        <!-- 用户获取系统消息的接口 -->
	        <mvc:mapping path="/appusersystemlist"/>
	        
	        <!-- 语音评论或者回复接口 -->
	        <mvc:mapping path="/uservoicescommentinto"/>
	        
	        <!-- 发表纯文字动态接口 -->
	        <mvc:mapping path="/voicesreleasetwo"/>
	        
	        <!-- 用户举报接口 -->
	        <mvc:mapping path="/userreportother"/>
	        
	        <!-- 评论信息的点赞 -->
	        <mvc:mapping path="/appgetupcomment"/>
	        
	        <!-- 单独获取回复评论消息信息 -->
	        <mvc:mapping path="/alonereplypage"/>
	        
	        <!-- 聊天接口 -->
	        <mvc:mapping path="/getcharttoken"/>         	<!-- 用户获取token -->
	        <mvc:mapping path="/getchartuserinfo"/>			<!-- 根据用户ID获取信息 -->
	        <!-- 聊天接口 -->
	        
	        <!-- 亲密度 -->
	        <mvc:mapping path="/appchatintimacyinto"/> 		<!-- 用户的亲密度跟新 -->
	        
	        <!-- 以下为优化接口 -->
	        <!-- 用户发表动态 -->
	        <mvc:mapping path="/userpublishstatement"/> 	<!-- 文字+图片+语音一同发表 -->
	        
	        <!-- 首页广场 -->
	        <mvc:mapping path="/userindexsquare"/>
	        
	        <!-- 首页Banner图 -->
	        <mvc:mapping path="/indexbannerlist"/>
	        
	        <!-- 修改用户的交友状态 -->
	        <mvc:mapping path="/updateuserfriendstate"/>
	        
	        <!-- 用户修改昵称 -->
	        <mvc:mapping path="/appupdateusername"/>
	        
	        <!-- 查看别人的动态 -->
	        <mvc:mapping path="/yourselfvoices"/>
	        
	        <!-- 用户上传自己的手机极光推送唯一标识 -->
	        <mvc:mapping path="/appupdateonlyphone"/>
	        
	        <!-- 用户上传经纬度 -->
	        <mvc:mapping path="/appuploadaddress"/>
	        
	        <!-- 微信预支付 -->
	        <mvc:mapping path="/weixintenpay"/>
	        
	        <!-- 用户的打招呼信息 -->
	        <mvc:mapping path="/appsayhellomethod"/>
	        
	        <!-- 52Hz最新接口 -->
	        <mvc:mapping path="/hertzonlinetwo"/>
	        
	        <!-- 查询是否关注接口 -->
	        <mvc:mapping path="/queryuserfollows"/>
	        
	        <!-- 查询是否认证信息 -->
	        <mvc:mapping path="/selectphotoauth"/>
	        
	        <!-- iPhone的支付判断 -->
	        <mvc:mapping path="/selectiphoneconfigure"/>
	        
	        <bean class="com.java.letch.interceptor.AppUserOnlineInterceptor">
	        </bean>
	    </mvc:interceptor>
			    
	</mvc:interceptors>
